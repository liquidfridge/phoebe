name = phoebe
description = Omega 4 theme for Dandelion
base theme = omega
screenshot = screenshot.png
engine = phptemplate
core = 7.x

; ========================================
; Stylesheets
; ========================================
stylesheets[all][] = css/phoebe.normalize.css
stylesheets[all][] = css/phoebe.styles.css
stylesheets[all][] = css/phoebe.no-query.css
stylesheets[all][] = libraries/rh-icon/dist/css/rh-icon.css

; ========================================
; Scripts
; ========================================
scripts[] = js/vendor/modernizr/modernizr.js
scripts[] = libraries/lodash/lodash.min.js
scripts[] = js/globals.min.js
scripts[] = libraries/html5shiv/html5shiv-printshiv.min.js
scripts[] = libraries/respond/respond.min.js
scripts[] = libraries/fastclick/lib/fastclick.js
scripts[] = libraries/q/q.min.js
scripts[] = libraries/rhea/dist/js/rhea.min.js
scripts[] = libraries/rh-icon/dist/js/rh-icon.min.js
scripts[] = js/phoebe.min.js

; ========================================
; Regions
; ========================================
regions[branding] = Branding
regions[header] = Header
regions[navigation] = Navigation
regions[highlighted] = Highlighted
regions[help] = Help
regions[content] = Content
regions[sidebar] = Sidebar
regions[footer] = Footer

; ========================================
; Breakpoints
; ========================================
breakpoints[xxlarge] = only screen and (min-width: 1920px)
breakpoints[xlarge] = only screen and (min-width: 1360px)
breakpoints[large] = only screen and (min-width: 1008px)
breakpoints[medium] = only screen and (min-width: 752px)
breakpoints[small] = only screen and (min-width: 0px)

; ========================================
; Multipliers
; ========================================
multipliers[xxlarge][] = 2x
multipliers[xlarge][] = 2x
multipliers[large][] = 2x
multipliers[medium][] = 2x
multipliers[small][] = 2x

; ========================================
; Icon settings
; ========================================
settings[icon][colors][black] = #222
settings[icon][colors][white] = #FFF
settings[icon][colors][light-sky] = #2FC5DA
settings[icon][colors][navy] = #0A2D50
settings[icon][prefix] = icon
settings[icon][size] = 256

